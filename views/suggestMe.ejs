<html>

<head>
   <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
   <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
   <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
   <!------ Include the above in your HEAD tag ---------->
   <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
   <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
      integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
      crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
      integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
      crossorigin="anonymous"></script>
   <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
   <link href="assets/css/suggestMe.css" rel="stylesheet">
   <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
</head>

<body>
   <nav class="navbar navbar-light bg-white">
      <a href="#" class="navbar-brand">suggestMe</a>
      <a href="#" class="card-link" data-toggle="modal" data-target="#suggestMePostModal"><i
            class="fa fa-newspaper-o"></i>
         CREATE POST</a>
   </nav>
   <!-- Modal -->
   <div id="suggestMePostModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
         <!-- Modal content-->
         <div class="modal-content">
            <div class="modal-body">
               <div class="card gedf-card">
                  <form method="post" action="/suggestMePost">
                     <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                           <li class="nav-item">
                              <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab"
                                 aria-controls="posts" aria-selected="true">Make
                                 a publication</a>
                           </li>
                           <li class="nav-item">
                              <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images"
                                 aria-selected="false" href="#images">Images</a>
                           </li>
                        </ul>
                     </div>
                     <div class="card-body">
                        <div class="tab-content" id="myTabContent">
                           <div class="tab-pane fade show active" id="posts" role="tabpanel"
                              aria-labelledby="posts-tab">
                              <div class="form-group">
                                 <label class="sr-only" for="message">suggest Me</label>
                                 <select id="inputState" class="form-control" name="suggestMe">
                                    <option selected>...</option>
                                 </select>
                              </div>
                              <div class="form-group">
                                 <label class="sr-only" for="message">post</label>
                                 <textarea class="form-control" id="message" rows="3"
                                    placeholder="What are you thinking?" name="suggestMeComment"></textarea>
                              </div>
                           </div>
                           <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                              <div class="form-group">
                                 <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Upload image</label>
                                 </div>
                              </div>
                              <div class="py-4"></div>
                           </div>
                        </div>
                        <div class="btn-toolbar justify-content-between">
                           <div class="btn-group">
                              <button type="submit" class="btn btn-primary">share</button>
                           </div>
                        </div>
                     </div>
                  </form>
               </div>
            </div>
            <div class="modal-footer" style="display: block;">
               <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
         </div>
      </div>
   </div>
   <div class="container-fluid gedf-wrapper">
      <div class="row">
         <div class="col-md-12 gedf-main">
            <div>
               <% for(var i=0; i < data.length; i++) { %>
               <div class=".col-md-12 .col-sm-12 card gedf-card suggestPostMedia"
                  style="margin-right: 1%;margin-bottom: 1%;">
                  <div class="card-header">
                     <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex justify-content-between align-items-center">
                           <div class="mr-2">
                              <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                           </div>
                           <div class="ml-2">
                              <div class="h5 m-0">
                                 @suggestMe
                                 <div class="h7 text-muted">Live or Leave</div>
                              </div>
                           </div>
                        </div>
                     </div>
                     <div class="card-body">
                        <a class="card-link" href="#">
                           <h5 class="card-title"><%= data[i].suggestMe %></h5>
                        </a>
                        <img src="<%= data[i].suggestMeImg %>" style=" max-height: 135px;">
                        <p class="card-text">
                           <%= data[i].suggestMeComments %>
                           <div style="float: right;">
                              <input type="checkbox" class="suggestMeVoteYes" data-onstyle="success"
                                 data-id="<%= data[i].idsuggestMe %>" data-onstyle="default" data-toggle="toggle"
                                 data-width="100" data-height="30"
                                 data-on="<i class='	fa fa-thumbs-o-up suggestMevoteYes-<%= data[i].idsuggestMe %>' aria-hidden='true'> <%= data[i].suggestMeVoteYes %> Yes</i> "
                                 data-off="<i class='fa fa-thumbs-o-up suggestMevoteYes-<%= data[i].idsuggestMe %>' aria-hidden='true'> <%= data[i].suggestMeVoteYes %> Yes</i> ">
                              <input type="checkbox" class="suggestMeVoteNo" data-onstyle="danger"
                                 data-id="<%= data[i].idsuggestMe %>" data-onstyle="default" data-toggle="toggle"
                                 data-width="100" data-height="30"
                                 data-on="<i class='	fa fa-thumbs-o-up suggestMeVoteNo-<%= data[i].idsuggestMe %>' aria-hidden='true'> <%= data[i].suggestMeVoteNo %> No</i> "
                                 data-off="<i class='fa fa-thumbs-o-up suggestMeVoteNo-<%= data[i].idsuggestMe %>' aria-hidden='true'> <%= data[i].suggestMeVoteNo %> No</i> ">
                           </div>
                        </p>
                     </div>
                  </div>
                  <div class="card-footer">
                     <a href="#" class="card-link suggestMeLike suggestMeLike-<%= data[i].idsuggestMe %>"
                        data-id="<%= data[i].idsuggestMe %>"><i class="fa fa-gittip"></i>
                        <%= data[i].suggestMeLike %>
                        Like</a>
                     <a href="#" class="card-link suggestMeComment suggestMeComment-<%= data[i].idsuggestMe %>"
                        data-toggle="modal" data-target="#suggestMeModal" data-id="<%= data[i].idsuggestMe %>"><i
                           class="fa fa-comment"></i>
                        <%= data[i].suggestMeAnswerCount %> Comment</a>
                     <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
                  </div>
               </div>
               <% } %>
            </div>
            <!-- Post /////-->
         </div>
      </div>
   </div>
   <!-- Modal -->
   <div id="suggestMeModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
         <!-- Modal content-->
         <div class="modal-content">
            <div class="modal-body">
               <div class="CommentReplyPrev"></div>
            </div>
            <div class="modal-footer" style="display: block;">
               <div class="form-group">
                  <label for="usr">Comment:</label>
                  <input type="hidden" class="form-control" id="suggestMeId">
                  <input type="text" class="form-control" id="CommentReply">
               </div>
               <button type="button" class="btn btn-default CommentReplySubmit" id="CommentReplySubmit"
                  data-dismiss="modal">Save</button>
               <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
         </div>
      </div>
   </div>
   <div id="suggestMeHomeModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
         <!-- Modal content-->
         <div class="modal-content">
            <img
               src="http://suggestme.000webhostapp.com/Are%20You%20thinking%20what%20I'm%20thinking%20_%20Hilarious%20Cartoon%20Poster.jpg">
         </div>
      </div>
   </div>
   <button style="display: none" href="#" class="card-link suggestMeHomeModal" data-toggle="modal"
      data-target="#suggestMeHomeModal">home</button>
   <script src="assets/js/suggestMe.js"></script>
   <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
</body>

</html>
